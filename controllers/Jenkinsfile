/* groovylint-disable-next-line CompileStatic */
/* groovylint-disable CompileStatic */
pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                // Instalación de dependencias utilizando npm
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                // Ejecución de pruebas utilizando npm
                sh 'npm test'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Construcción de una imagen Docker
                sh 'docker build -t nombre_de_la_imagen .'
            }
        }
    }
}
